<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-2.5.xsd">
	<import resource="datacleaner-config.xml" />
	<import resource="datacleaner-persistence.xml" />
	<import resource="datacleaner-views.xml" />
	<!--
		Maps incoming URLs to controllers by looking at their annotations
	-->
	<bean
		class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping" />
	<bean
		class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter" />
	<context:component-scan base-package="dk.eobjects.datacleaner.webmonitor.controller" />
	<!--
		Configures tiles views. They are defined in the datacleaner-tiles.xml
		file
	-->
	<bean id="tilesConfigurer"
		class="org.springframework.web.servlet.view.tiles2.TilesConfigurer">
		<property name="definitions">
			<list>
				<value>/WEB-INF/datacleaner-tiles.xml</value>
			</list>
		</property>
	</bean>
	<bean id="bootstrap" class="dk.eobjects.datacleaner.webmonitor.WebmonitorBootstrap"
		lazy-init="false" init-method="init">
		<property name="sessionFactory" ref="sessionFactory" />
		<property name="schedulerFactory" ref="schedulerFactory" />
		<property name="webmonitorHelper" ref="webmonitorHelper" />
		<property name="persistenceHelper" ref="persistenceHelper" />
	</bean>
	<bean id="schedulerFactory" class="org.quartz.impl.StdSchedulerFactory"></bean>
	<bean id="webmonitorHelper" class="dk.eobjects.datacleaner.webmonitor.WebmonitorHelper" />
	<bean id="persistenceHelper" class="dk.eobjects.datacleaner.webmonitor.PersistenceHelper">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
</beans>