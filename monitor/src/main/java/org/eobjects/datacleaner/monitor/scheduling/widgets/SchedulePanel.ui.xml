<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<g:HTMLPanel styleName="SchedulePanel">
	
		<g:FlowPanel ui:field="headerPanel" />
		
		<div class="FormRow">
			<g:Button text="Trigger now" ui:field="triggerNowButton" />
			<span class="FormKey">Schedule:</span>
			<g:Label styleName="FormValue" ui:field="scheduleLabel" />
		</div>
		
		<div class="FormRow">
			<span class="FormKey">Latest execution:</span>
			<g:Label styleName="FormValue" ui:field="latestExecutionLabel" />
		</div>
		
		<div class="FormRow">
			<span class="FormKey">Alerts:</span>
			<g:FlowPanel styleName="FormValue" ui:field="alertsPanel" />
		</div>
		
		<div style="clear:both;"></div>
		
	</g:HTMLPanel>
</ui:UiBinder>