<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<import resource="datacleaner-profiler-modules.xml" />
	<import resource="datacleaner-validator-modules.xml" />

	<!-- Named connections. Add your own connections here. -->
	<bean class="dk.eobjects.datacleaner.gui.model.NamedConnection">
		<property name="name" value="- select -" />
		<property name="connectionString" value="jdbc:" />
		<property name="username" value="" />
		<property name="password" value="" />
	</bean>
	<bean class="dk.eobjects.datacleaner.gui.model.NamedConnection">
		<property name="name" value="DataCleaner sampledata" />
		<property name="connectionString" value="jdbc:hsqldb:res:datacleaner-database" />
		<property name="username" value="SA" />
		<property name="password" value="" />
		<property name="tableTypes">
			<list>
				<value>TABLE</value>
			</list>
		</property>
	</bean>

	<!-- Statically loaded drivers goes here -->
	<bean class="dk.eobjects.datacleaner.gui.model.DatabaseDriver">
		<property name="name" value="Hsqldb driver" />
		<property name="driverClass" value="org.hsqldb.jdbcDriver" />
	</bean>
	<bean class="dk.eobjects.datacleaner.gui.model.DatabaseDriver">
		<property name="name" value="Sun JDBC-ODBC bridge driver" />
		<property name="driverClass" value="sun.jdbc.odbc.JdbcOdbcDriver" />
	</bean>

	<!-- Configuration panels for profiles and validation rules -->
	<bean name="configurationPanelManager"
		class="dk.eobjects.datacleaner.gui.panels.ConfigurationPanelManager">
		<property name="profilerPanels">
			<map>
				<entry key="dk.eobjects.datacleaner.profiler.trivial.DictionaryProfile"
					value="dk.eobjects.datacleaner.gui.panels.DictionaryProfileConfigurationPanel" />
				<entry key="dk.eobjects.datacleaner.profiler.trivial.RegexProfile"
					value="dk.eobjects.datacleaner.gui.panels.RegexProfileConfigurationPanel" />
					<entry key="dk.eobjects.datacleaner.profiler.trivial.DateMaskProfile"
					value="dk.eobjects.datacleaner.gui.panels.DateMaskProfileConfigurationPanel" />
				<entry key="dk.eobjects.datacleaner.profiler.valuedist.ValueDistributionProfile"
					value="dk.eobjects.datacleaner.gui.panels.ValueDistributionProfileConfigurationPanel" />
			</map>
		</property>
		<property name="validatorPanels">
			<map>
				<entry key="dk.eobjects.datacleaner.validator.condition.JavascriptValidationRule"
					value="dk.eobjects.datacleaner.gui.panels.JavascriptValidationRuleConfigurationPanel" />
				<entry key="dk.eobjects.datacleaner.validator.trivial.RegexValidationRule"
					value="dk.eobjects.datacleaner.gui.panels.RegexValidationRuleConfigurationPanel" />
				<entry key="dk.eobjects.datacleaner.validator.dictionary.DictionaryValidationRule"
					value="dk.eobjects.datacleaner.gui.panels.DictionaryValidationRuleConfigurationPanel" />
			</map>
		</property>
	</bean>
</beans>