<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Validator modules. If you have additional validation rules to add, add descriptors for them here. -->
	<bean
		class="dk.eobjects.datacleaner.validator.BasicValidationRuleDescriptor">
		<property name="displayName" value="Javascript evaluation" />
		<property name="validationRuleClass"
			value="dk.eobjects.datacleaner.validator.condition.JavascriptValidationRule" />
		<property name="iconPath"
			value="images/validation_rule_javascript.png" />
	</bean>

	<bean
		class="dk.eobjects.datacleaner.validator.BasicValidationRuleDescriptor">
		<property name="displayName" value="Dictionary lookup" />
		<property name="validationRuleClass"
			value="dk.eobjects.datacleaner.validator.dictionary.DictionaryValidationRule" />
		<property name="iconPath"
			value="images/validation_rule_dictionary.png" />
	</bean>

	<bean
		class="dk.eobjects.datacleaner.validator.BasicValidationRuleDescriptor">
		<property name="displayName" value="Value range evaluation" />
		<property name="validationRuleClass"
			value="dk.eobjects.datacleaner.validator.trivial.ValueRangeValidationRule" />
		<property name="iconPath"
			value="images/validation_rule_value_range.png" />
	</bean>

	<bean
		class="dk.eobjects.datacleaner.validator.BasicValidationRuleDescriptor">
		<property name="displayName" value="Regex validation" />
		<property name="validationRuleClass"
			value="dk.eobjects.datacleaner.validator.trivial.RegexValidationRule" />
		<property name="iconPath"
			value="images/validation_rule_regex.png" />
	</bean>

	<bean
		class="dk.eobjects.datacleaner.validator.BasicValidationRuleDescriptor">
		<property name="displayName" value="Not-null check" />
		<property name="validationRuleClass"
			value="dk.eobjects.datacleaner.validator.trivial.NotNullValidationRule" />
		<property name="iconPath"
			value="images/validation_rule_not_null.png" />
	</bean>

</beans>