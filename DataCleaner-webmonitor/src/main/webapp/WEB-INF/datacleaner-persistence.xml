<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	
	<!-- Datasource for saving profiler and validator results -->
	<bean id="dataSource"
		class="dk.eobjects.datacleaner.webmonitor.model.DataCleanerDataSource"
		destroy-method="destroy">
		<property name="databaseFolder" value="/WEB-INF/database" />
		<property name="webmonitorHelper" ref="webmonitorHelper" />
	</bean>
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="mappingResources">
			<list>
				<value>hibernate/Trigger.hbm.xml</value>
				<value>hibernate/ProfilerJob.hbm.xml</value>
				<value>hibernate/ProfilerResult.hbm.xml</value>
				<value>hibernate/ProfilerResultCell.hbm.xml</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<map>
				<entry key="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
				<entry key="hibernate.hbm2ddl.auto" value="update" />
			</map>
		</property>
	</bean>
</beans>