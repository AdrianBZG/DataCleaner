<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<import resource="datacleaner-profiler-modules.xml" />
	<import resource="datacleaner-validator-modules.xml" />

	<!-- Named connections. Add your own connections here. -->
	<bean class="dk.eobjects.datacleaner.gui.model.NamedConnection">
		<property name="name" value="DataCleaner TestDB (derby)" />
		<property name="driverClass"
			value="org.apache.derby.jdbc.ClientDriver" />
		<property name="connectionString"
			value="jdbc:derby://localhost:1527/databases/datacleaner_testdb" />
		<property name="username" value="APP" />
		<property name="password" value="APP" />
	</bean>

</beans>